# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET /                         controllers.Twitter.tweetList

GET /tweets                   controllers.Application.named
GET /tweetStateFeed           controllers.Twitter.tweetStateFeed

GET /topic/add                controllers.Topics.add(topic: String, token: String ?="")
GET /topic/remove             controllers.Topics.remove(topic: String, token: String ?="")

# Tweets as JSON
GET /tweets/latest            controllers.Twitter.rawTweetsJson(results: Int ?= 50)

GET /tweets/replay/:results    controllers.Twitter.tweetReplay(results: Int, delayMS: Int ?= 250)

GET /images/:filename         controllers.Images.getImage(filename: String)

GET /status                   controllers.WebSockets.statusPage()
GET /statusFeed               controllers.WebSockets.statusFeed()

GET /assets/*file             controllers.Assets.at(path="/public", file)
